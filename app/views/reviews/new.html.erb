<h3>Please Add Your Review</h3>

<%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: ["0", "1", "2", "3", "4", "5"] %>
    <%= f.submit %>
<% end %>
<br>
<div class="footer">
  <p><%= link_to "Back To Restaurant", restaurant_path(@restaurant), class: "btn btn-primary btn-sm"  %></p>
</div>
